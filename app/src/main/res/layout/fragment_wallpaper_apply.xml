<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/dialog_content_padding"
              tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/apply_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_item_padding"
        app:theme="@style/ButtonStyle">

        <ImageView
            android:id="@+id/apply_all_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/content_margin"
                android:layout_marginStart="@dimen/content_margin"
                android:text="@string/wallpaper_type_both"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_content_title"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/apply_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_item_padding"
        app:theme="@style/ButtonStyle">

        <ImageView
            android:id="@+id/apply_home_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:text="@string/wallpaper_type_system"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/apply_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_item_padding"
        app:theme="@style/ButtonStyle">

        <ImageView
            android:id="@+id/apply_lock_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:text="@string/wallpaper_type_lock"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"/>

    </LinearLayout>
</LinearLayout>